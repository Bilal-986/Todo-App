{
  "name": "todo-app",
  "description": "A full-stack TODO application with Django backend and React frontend",
  "repository": "https://github.com/Bilal-986/Todo-App",
  "keywords": ["django", "react", "todo", "fullstack"],
  "env": {
    "SECRET_KEY": {
      "description": "Django secret key",
      "generator": "secret"
    },
    "DEBUG": {
      "description": "Debug mode",
      "value": "False"
    },
    "ALLOWED_HOSTS": {
      "description": "Allowed hosts",
      "value": ".herokuapp.com"
    },
    "CORS_ALLOWED_ORIGINS": {
      "description": "CORS allowed origins",
      "value": "https://your-frontend-app.herokuapp.com"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "heroku/nodejs"
    }
  ]
} 